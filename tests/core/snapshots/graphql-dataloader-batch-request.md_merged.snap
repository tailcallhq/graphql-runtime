schema @server @upstream(batch: {delay: 1, headers: []}) {
  query: Query
}

type Post {
  id: Int
  title: String
  user: User
    @graphQL(args: [{key: "id", value: "{{.value.userId}}"}], url: "http://upstream/graphql", batch: true, name: "user")
  userId: Int
}

type Query {
  posts: [Post] @http(url: "http://jsonplaceholder.typicode.com/posts")
}

type User {
  id: Int
  name: String
}
